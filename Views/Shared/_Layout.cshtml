<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>kCab</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" /><link href="~/Content/material-design-iconic-font.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/CusCheckBoxVal.js"></script>
    <script src="https://kit.fontawesome.com/8eacc15d3d.js" crossorigin="anonymous"></script>
    <style>
        #intro {
            background-image: url('../../Content/Image/2.jpg');
            background-size: 100% 100%;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .semitrans {
            background-color: rgba(0,0,0,.5) !important;
        }
    </style>
</head>
<body id="intro" class="bg-image">
    <div class="navbar navbar-expand-lg bg-dark navbar-dark semitrans sticky-top">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            @Html.ActionLink("KCab", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-warning" })
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">

                    <li>
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link text-light" })
                    </li>
                    <li>@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link text-light" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link text-light" })</li>

                </ul>
            </div>
            @Html.Partial("_LoginPartial")
        </div>
        </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p style="text-align:center" class="text-warning">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
        <script src="~/Scripts/CusCheckBoxVal.js"></script>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>