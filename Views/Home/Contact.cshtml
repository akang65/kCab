@model kCab.Models.ContactUsModel
@{
    ViewBag.Title = "Contact";
}

@using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row  justify-content-center align-items-center h-100">

        <div class="card text-warning bg-light border-warning mb-3 mt-5" style="border-radius: 25px; width:36rem;">
            <div class="card-body ">
                <div class="row justify-content-center">
                    @*<div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">*@

                        <p class="text-center h1 fw-bold "><span class="badge bg-light text-warning">Kcab</span></p>
                        <p class="text-center h4">Contact Us</p>
                        <form class="mx-1 mx-md-4">
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="d-flex flex-row align-items-center mb-4">
                                <i class="fas fa-address-card fa-lg me-3 fa-fw"></i>
                                <div class="form-outline flex-fill mb-0">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = " Your Email Address" })

                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                <div class="form-outline flex-fill mb-0">
                                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @placeholder = "Subject" })

                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                <div class="form-outline flex-fill mb-0">
                                    
                                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @placeholder = "Message" })
                                    
                                </div>
                            </div>
                        </form>

                        <div class="d-flex justify-content-center mx-4 mb-3">
                            <input type="submit" id="submit" class="btn btn-success gradient-custom-4 signup" value="Send" />
                        </div>
                    @*</div>*@
                </div>
            </div>
        </div>
    </div>
}  